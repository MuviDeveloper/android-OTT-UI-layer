<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/appBackgroundColor"
    android:padding="@dimen/_16sdp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/close_pop"
        android:layout_marginTop="@dimen/_12sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/close_svg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/custom_layout"
        android:visibility="gone"
        android:layout_marginTop="@dimen/_38sdp"
        app:layout_constraintTop_toBottomOf="@id/close_pop"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/name_return"
            android:textColor="@color/white"
            android:textSize="@dimen/_18sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/thnaksTV"
            android:textColor="#CDCDCD"
            android:layout_marginTop="@dimen/_32sdp"
            android:textSize="@dimen/_18sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/message"
            android:layout_marginBottom="@dimen/_15sdp"
            android:textColor="#CDCDCD"
            android:layout_marginTop="@dimen/_8sdp"
            android:textSize="@dimen/_16sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/kid_layout"
        android:layout_marginTop="@dimen/_32sdp"
        app:layout_constraintTop_toBottomOf="@id/close_pop"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/name_user"
            android:textColor="@color/white"
            android:textSize="@dimen/_18sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="@dimen/_28sdp"
            android:id="@+id/parent_control"
            android:textColor="#CDCDCD"
            android:textSize="@dimen/_18sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="@dimen/_2sdp"
            android:id="@+id/parent_message"
            android:textColor="#C3C3C3"
            android:textSize="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/emailTv"
            android:textColor="#CDCDCD"
            android:textSize="@dimen/_14sdp"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="@dimen/_24sdp"/>
        <EditText
            android:layout_marginTop="@dimen/_2sdp"
            android:id="@+id/paswordEdt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="viewStart"
            android:hint="enter your password"
            android:padding="@dimen/_9sdp"
            android:textDirection="locale"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:background="@drawable/edit_outer_line"
            android:textColor="@color/editTextColor"
            android:textColorHint="@color/hint_color"
            android:textSize="@dimen/_14sdp"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/emailError"
            android:layout_marginTop="@dimen/_2sdp"
            android:textColor="#FF2B44"
            android:textSize="@dimen/_13sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <Button
        android:visibility="gone"
        android:id="@+id/confirmBton"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@drawable/button_radious"
        android:text=""
        android:textAllCaps="false"
        android:textColor="@color/buttonTextColor"
        android:textSize="@dimen/_18sdp" />
</androidx.constraintlayout.widget.ConstraintLayout>