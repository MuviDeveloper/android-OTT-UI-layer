<?xml version="1.0" encoding="utf-8"?><!--android:layout_width="@android:dimen/config_prefDialogWidth"-->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/option_menu_layout"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:padding="1dp"
    app:cardBackgroundColor="#ffffff"
    app:cardCornerRadius="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_effect"
            android:clickable="true"
            android:focusable="true"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/login_image"
                android:layout_width="@dimen/marginRight20dp"
                android:layout_height="@dimen/marginRight20dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:clickable="false"
                android:focusable="false"
                android:adjustViewBounds="true"
                android:src="@drawable/login" />

            <TextView
                android:id="@+id/login_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="false"
                android:focusable="false"
                android:paddingEnd="50dp"
                android:paddingStart="10dp"
                android:text="Login"
                android:gravity="center_vertical"
                android:textColor="#000"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_effect"
            android:clickable="true"
            android:focusable="true"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/register_image"
                android:layout_width="@dimen/marginRight20dp"
                android:layout_height="@dimen/marginRight20dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:clickable="false"
                android:focusable="false"
                android:adjustViewBounds="true"
                android:src="@drawable/register" />

            <TextView
                android:id="@+id/register_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="false"
                android:focusable="false"
                android:paddingEnd="50dp"
                android:paddingStart="10dp"
                android:text="Register"
                android:gravity="center_vertical"
                android:textColor="#000"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_effect"
            android:clickable="true"
            android:focusable="true"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="@dimen/marginRight20dp"
                android:layout_height="@dimen/marginRight20dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:clickable="false"
                android:focusable="false"
                android:adjustViewBounds="true"
                android:src="@drawable/register" />

            <TextView
                android:id="@+id/profile_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="false"
                android:focusable="false"
                android:paddingEnd="50dp"
                android:paddingStart="10dp"
                android:text="Profile"
                android:gravity="center_vertical"
                android:textColor="#000"
                android:textSize="16sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/language_popup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_effect"
            android:clickable="true"
            android:focusable="true"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/language_image"
                android:layout_width="@dimen/marginRight20dp"
                android:layout_height="@dimen/marginRight20dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:focusable="false"
                android:adjustViewBounds="true"
                android:src="@drawable/language" />

            <TextView
                android:id="@+id/language_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="false"
                android:focusable="false"
                android:paddingEnd="50dp"
                android:paddingStart="10dp"
                android:text="Language"
                android:gravity="center_vertical"
                android:textColor="#000"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_effect"
            android:clickable="true"
            android:focusable="true"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="@dimen/marginRight20dp"
                android:layout_height="@dimen/marginRight20dp"
                android:layout_margin="10dp"
                android:gravity="center">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:id="@+id/notification_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:clickable="false"
                        android:focusable="false"
                        android:adjustViewBounds="true"
                        android:src="@drawable/action_notification" />

                    <FrameLayout
                        android:id="@+id/counterValuePanel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|top">

                        <TextView
                            android:id="@+id/count_notification"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:background="@drawable/drawable_border"
                            android:gravity="center"
                            android:text="1"
                            android:textAlignment="center"
                            android:textColor="#ffffff"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                    </FrameLayout>
                </FrameLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/notification_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="false"
                android:focusable="false"
                android:paddingEnd="50dp"
                android:paddingStart="10dp"
                android:text="Notification"
                android:gravity="center_vertical"
                android:textColor="#000"
                android:textSize="16sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/purchase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_effect"
            android:clickable="true"
            android:focusable="true"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/purchase_image"
                android:layout_width="@dimen/marginRight20dp"
                android:layout_height="@dimen/marginRight20dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:clickable="false"
                android:focusable="false"
                android:adjustViewBounds="true"
                android:src="@drawable/purchase_history" />

            <TextView
                android:id="@+id/purchase_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="false"
                android:focusable="false"
                android:paddingEnd="50dp"
                android:paddingStart="10dp"
                android:gravity="center_vertical"
                android:text="Purchase History"
                android:textColor="#000"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_effect"
            android:clickable="true"
            android:focusable="true"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/logout_image"
                android:layout_width="@dimen/marginRight20dp"
                android:layout_height="@dimen/marginRight20dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:clickable="false"
                android:focusable="false"
                android:adjustViewBounds="true"
                android:src="@drawable/logout" />
            <TextView
                android:id="@+id/logout_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="false"
                android:focusable="false"
                android:paddingEnd="50dp"
                android:paddingStart="10dp"
                android:gravity="center_vertical"
                android:text="Logout"
                android:textColor="#000"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>