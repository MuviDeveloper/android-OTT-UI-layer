<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/listViewLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="false"
    android:focusable="false"
    android:padding="4dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="false"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/transparent"
        android:background="@color/transparent"
        android:clipChildren="true"
        app:cardPreventCornerOverlap="false">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
         >


            <ImageView
                android:id="@+id/itemImage"
                android:layout_width="@dimen/home_layout_width"
                android:layout_height="@dimen/homelogo_height"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:background="@color/no_image_bg_color"/>


            <ImageView
                android:id="@+id/movieImageOverlay"
                android:layout_width="@dimen/home_layout_width"
                android:layout_height="@dimen/homelogo_height"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:background="@drawable/content_list_overlay"
                android:visibility="gone"/>


<!--            <TextView-->
<!--                android:id="@+id/itemTitle"-->
<!--                android:layout_width="@dimen/home_layout_width"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:clickable="false"-->
<!--                android:ellipsize="end"-->
<!--                android:focusable="false"-->
<!--                android:textDirection="locale"-->
<!--                android:focusableInTouchMode="false"-->
<!--                android:gravity="start"-->
<!--                android:maxLines="2"-->
<!--                android:padding="@dimen/loginImageViewMarging_top_padding"-->
<!--                android:layout_marginStart="@dimen/loginImageViewMarging_top_padding"-->
<!--                android:text="Bruce Wayne"-->
<!--                android:textColor="@color/white"-->
<!--                android:textSize="@dimen/itemtitle1_text_size"-->
<!--                android:textStyle="normal"-->
<!--                android:visibility="visible"/>-->

            <TextView
                android:id="@+id/itemTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignBottom="@+id/itemImage"
                android:layout_alignEnd="@+id/itemImage"
                android:clickable="false"
                android:ellipsize="end"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="start"
                android:textDirection="locale"
                android:maxLines="2"
                android:padding="@dimen/itemTitle_padding"
                android:layout_marginStart="@dimen/loginImageViewMarging_top_padding"
                android:text="Abcd"
                android:textColor="@color/white"
                android:textSize="@dimen/itemtitle1_text_size"
                android:textStyle="normal"
                android:visibility="visible"/>





        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>
