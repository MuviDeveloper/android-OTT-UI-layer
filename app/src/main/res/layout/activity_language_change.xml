<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/appBackgroundColor"
    android:gravity="center"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?actionBarSize"
        android:gravity="center"
        android:orientation="vertical">

        <!-- <TextView
             android:id="@+id/languagePopupTitle"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginBottom="@dimen/videoCensorRatingTextView_margin"
             android:layout_marginTop="@dimen/login_button_margin"
             android:textColor="@color/textColor"
             android:textSize="@dimen/languagepop_text_size"
             android:textStyle="bold"
             android:gravity="center_horizontal" />-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ppv_margin"
            android:paddingLeft="@dimen/Login_drawing_padding"
            android:paddingRight="@dimen/Login_drawing_padding">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/language_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical" />
        </LinearLayout>


    </LinearLayout>


    <Button
        android:id="@+id/apply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/ppv_margin"
        android:background="@drawable/button_radious"
        android:stateListAnimator="@null"
        android:textColor="@color/buttonTextColor"
        android:textSize="@dimen/applybtn_text_size"
        android:textAllCaps="false"
        android:textStyle="bold" />
    <!--<View
        android:layout_width="match_parent"
        android:layout_height="@dimen/lineTextView_height"
        android:background="@color/languagePopupViewBackgroundColor" />-->
</RelativeLayout>
