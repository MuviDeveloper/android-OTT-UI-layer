<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/appBackgroundColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusableInTouchMode="true">
    <LinearLayout
        android:visibility="gone"
            android:id="@+id/advance_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/_16sdp"
            android:paddingEnd="@dimen/_16sdp"
            android:orientation="vertical">
        <EditText
            android:layout_marginTop="40dp"
            android:id="@+id/contact_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="viewStart"
            android:padding="@dimen/_6sdp"
            android:textDirection="locale"
            android:imeOptions="actionDone"
            android:inputType="textPersonName"
            android:background="@drawable/edit_outer_line"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_color"
            android:textSize="@dimen/_17sdp"
            />
        <LinearLayout
            android:layout_marginTop="@dimen/_25sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/logQryTv"
                android:textColor="#CDCDCD"
                android:textSize="@dimen/_19sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/needTV"
                android:layout_marginTop="@dimen/_8sdp"
                android:textSize="@dimen/_15sdp"
                android:textColor="#CDCDCD"
                android:text="What do you need help with?"
                android:paddingTop="@dimen/_2sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:visibility="gone"
                android:layout_marginTop="@dimen/_2sdp"
                android:id="@+id/queryError"
                android:text="Please select one of the issues listed."
                android:textColor="#FF2B44"
                android:textSize="@dimen/_13sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/query_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/subquery_ll"
            android:layout_marginTop="@dimen/_32sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/issTv"
                android:textSize="@dimen/_15sdp"
                android:text="What technical issue did you experience?"
                android:textColor="#CDCDCD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:visibility="gone"
                android:layout_marginTop="@dimen/_2sdp"
                android:id="@+id/subqueryError"
                android:text="Please select one of the issues listed."
                android:textColor="#FF2B44"
                android:textSize="@dimen/_13sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/sub_query_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/_32sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/optTv"
                android:textSize="@dimen/_11sdp"
                android:textColor="@color/editTextColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/detailTV"
                android:layout_marginTop="4dp"
                android:textSize="@dimen/_15sdp"
                android:textColor="#CDCDCD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/edt_message"
                android:layout_marginTop="@dimen/_16sdp"
                android:gravity="top"
                android:background="@drawable/edit_outer_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_184sdp"
                android:hint=""
                android:padding="@dimen/_5sdp"
                android:textDirection="locale"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:textColor="#A6A5A5"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/_15sdp"
                />
            <TextView
                android:visibility="gone"
                android:layout_marginTop="@dimen/_2sdp"
                android:id="@+id/otherqueryError"
                android:text=""
                android:textColor="#FF2B44"
                android:textSize="@dimen/_13sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/_32sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/fille_details"
                android:textColor="#CDCDCD"
                android:textSize="@dimen/_15sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/emailTv"
                android:textColor="@color/editTextColor"
                android:textSize="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="@dimen/_24sdp"/>
            <EditText
                android:layout_marginTop="@dimen/_2sdp"
                android:id="@+id/edt_mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="viewStart"
                android:hint="your@gmail.com"
                android:padding="@dimen/_16sdp"
                android:textDirection="locale"
                android:imeOptions="actionDone"
                android:inputType="textEmailAddress"
                android:paddingBottom="@dimen/Login_drawing_padding"
                android:paddingTop="@dimen/Login_drawing_padding"
                android:background="@drawable/edit_outer_line"
                android:textColor="@color/editTextColor"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/_13sdp"/>
            <TextView
                android:visibility="gone"
                android:id="@+id/emailError"
                android:layout_marginTop="@dimen/_2sdp"
                android:textColor="#FF2B44"
                android:textSize="@dimen/_13sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <Button
            android:id="@+id/submit_cont"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/ppv_margin"
            android:layout_marginRight="@dimen/ppv_margin"
            android:layout_marginTop="@dimen/_32sdp"
            android:layout_marginBottom="@dimen/_32sdp"
            android:background="@drawable/button_radious"
            android:text=""
            android:textAllCaps="false"
            android:textColor="@color/buttonTextColor"
            android:textSize="@dimen/_18sdp" />
        </LinearLayout>

</ScrollView>
