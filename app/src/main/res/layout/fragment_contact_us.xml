<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusableInTouchMode="true">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ppv_margin"
            android:layout_marginEnd="@dimen/ppv_margin"
            android:orientation="vertical">


            <!--        <TextView
                        android:id="@+id/categoryTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/toolbar"
                        android:layout_marginBottom="@dimen/categoryTitle_margin"
                        android:layout_marginLeft="@dimen/loginImageViewMarging_top"
                        android:layout_marginTop="@dimen/loginImageViewMarging_top"

                        android:paddingBottom="@dimen/Login_drawing_padding"
                        android:paddingTop="@dimen/Login_drawing_padding"
                        android:text=""
                        android:textColor="@color/pageTitleColor"
                        android:textSize="@dimen/sectiontitle_text_size"
                        android:textStyle="normal" />-->

            <TextView
                android:id="@+id/contactFormTitle"
                android:layout_width="@dimen/fragmenttextview_width"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/categoryTitle_margin"
                android:layout_marginStart="@dimen/ppv_margin"
                android:paddingBottom="@dimen/Login_drawing_padding"
                android:paddingStart="@dimen/login_new_user_padding"
                android:paddingTop="@dimen/Login_drawing_padding"
                android:textDirection="locale"
                android:text=""
                android:layout_below="@+id/toolbar"
                android:textColor="@color/contact_us_title_color"
                android:textSize="@dimen/vdiotitle1_text_size" />

            <EditText
                android:id="@+id/contact_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/contact_name_margin"
                android:layout_marginStart="@dimen/ppv_margin"
                android:layout_marginEnd="@dimen/ppv_margin"
                android:textAlignment="viewStart"
                android:hint=""
                android:textDirection="locale"
                android:imeOptions="actionDone"
                android:inputType="textPersonName"
                android:paddingBottom="@dimen/Login_drawing_padding"
                android:paddingTop="@dimen/Login_drawing_padding"
                android:textColor="@color/editTextColor"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/editbox_text_size"
                />

            <EditText
                android:id="@+id/contact_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/contact_name_margin"
                android:layout_marginStart="@dimen/Login_drawing_padding"
                android:layout_marginEnd="@dimen/Login_drawing_padding"
                android:hint=""
                android:textAlignment="viewStart"
                android:textDirection="locale"
                android:imeOptions="actionDone"
                android:inputType="textEmailAddress"
                android:paddingBottom="@dimen/Login_drawing_padding"
                android:paddingTop="@dimen/Login_drawing_padding"
                android:textColor="@color/editTextColor"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/editbox_text_size" />

            <EditText
                android:id="@+id/contact_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/payment_margin_btn_top"
                android:layout_marginStart="@dimen/ppv_margin"
                android:layout_marginEnd="@dimen/ppv_margin"
                android:hint=""
                android:textAlignment="viewStart"
                android:textDirection="locale"
                android:imeOptions="actionDone"
                android:inputType="textMultiLine"
                android:paddingBottom="@dimen/Login_drawing_padding"
                android:paddingTop="@dimen/Login_drawing_padding"
                android:textColor="@color/editTextColor"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/editbox_text_size" />

            <Button
                android:id="@+id/submit_cont"
                android:layout_width="@dimen/submitcontact_width"
                android:layout_height="@dimen/submitcontact_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/ppv_margin"
                android:layout_marginRight="@dimen/ppv_margin"
                android:layout_marginTop="@dimen/payment_margin_btn_top"
                android:background="@drawable/button_radious"
                android:text=""
                android:textAllCaps="false"
                android:textColor="@color/buttonTextColor"
                android:textSize="@dimen/submitcontact_text_size" />
        </LinearLayout>
    </ScrollView>


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" />

</LinearLayout>
